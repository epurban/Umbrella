--get all stories for a Company:
SELECT * 
FROM `anon_stories` 
WHERE `story_comp_id` = $id;

--get all companies:
SELECT `companies_name`, `companies_rating` 
FROM `companies`;

--get A company
SELECT *
FROM `companies`
WHERE `companies_name` = $name;

--Get the 5 worse rated companies:
SELECT `companies_name`, `companies_rating`
FROM `companies`
WHERE ORDERBY `companies_rating` ASC 
LIMIT 5;

--adding a Company
INSERT 
INTO 'companies' (`companies_name`, `companies_address`) 
VALUES ($CompName, $CompAddr);

--adding a Blurb
INSERT 
INTO `anon_stories` (`story_comp_id`, `story_blurb`, `story_rating`) 
VALUES ($CompId, $StoryBlurb, $StoryRating);

--update Company StoryRating
UPDATE `companies` 
SET `companies_rating` = 
(
    SELECT SUM(`story_rating`)/COUNT(`story_id`)  
    FROM `anon_stories`
    JOIN `companies`
    ON `stories_comp_id` = `companies_id`
    WHERE `stories_comp_id` = $CompId
)

